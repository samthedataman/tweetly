# Contextly.ai Environment Configuration Template
# Copy this file to .env and fill in your values

# Required: OpenAI API key for embeddings and AI features
OPENAI_API_KEY=sk-...

# Optional: Other AI providers
ANTHROPIC_API_KEY=sk-ant-...
PERPLEXITY_API_KEY=pplx-...

# LanceDB Cloud Configuration (for vector storage)
LANCEDB_URI=db://your-project-name
LANCEDB_API_KEY=sk_...

# Upstash Redis (for caching)
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# MongoDB (for metadata storage)
MONGODB_URL=mongodb://localhost:27017

# Server Configuration
BASE_URL=http://localhost:8000
PORT=8000

# Security
JWT_SECRET=your-secret-key-change-in-production

# Web3 Configuration (optional)
INFURA_PROJECT_ID=your-infura-id
BASE_RPC_URL=https://base-mainnet.infura.io/v3/your-project-id

# Feature Flags
ENABLE_GRAPH_RAG=true
ENABLE_EARN_MODE=true
ENABLE_ANALYTICS=true